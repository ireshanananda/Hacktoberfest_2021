#include<stdio.h>
int main()
{
	float num1,num2,result;
	char opr;
	printf("Enter the first number:");
	scanf("%f",&num1);
	printf("Enter the second number:");
	scanf("%f",&num2);
	printf("Enter the operator:");
	scanf(" %c",&opr);
	
	switch(opr)
	{
		case '+':
	     result = num1 + num2;
		 break;
		case '-':
         result = num1 - num2;
         break;
		case '*':
		 result = num1 * num2;
		 break;
		case '/':
		 result = num1 / num2;
		 break;	
	}
	 printf("The result= %f \n",result);
	return 0;
}
